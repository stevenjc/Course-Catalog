<h1>Search for Courses</h1>

<%= form_tag(search_path, method: "get", class: "form") do %>
  <div class="form-group">
    <label>Course</label>
    <%= text_field_tag(:course, "") %>
  </div>
  <div class="form-group">
    <label>Subject</label>
    <%= text_field_tag(:subject, "") %>
  </div>

  <%= submit_tag("Search", class: "btn btn-success") %>
<% end %>
