
<h1>Listing Instructors</h1>

<table class="table table-responsive" style="border-spacing: 15px;">
    <tr>
      <th>Name</th>
      <th> Email </th>
      <th> Comment </th>
    </tr>
    <% @instructors.each do |instructor| %>
      <tr  style="text-align: center">
        <td><%=instructor.first + " " + instructor.last%></td>
        <td><%=instructor.email%></td>
        <td><%=instructor.comment%></td>
      </tr>
    <% end %>
</table>
